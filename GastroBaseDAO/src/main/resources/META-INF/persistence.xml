<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="GastroBase" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>dominio.Usuario</class>
    <class>dominio.Ingrediente</class>
    <class>dominio.Proceso</class>
    <class>dominio.Favorito</class>
    <class>dominio.Chef</class>
    <class>dominio.Admin</class>
    <class>dominio.Comentario</class>
    <class>dominio.Follow</class>
    <class>dominio.Administra</class>
    <class>dominio.FotoReceta</class>
    <class>dominio.Receta</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
   <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/GastroBase?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="63690Val"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
